{
	"name": "@stickerdaniel/convex-autumn-svelte",
	"author": "Daniel Sticker",
	"version": "0.1.3",
	"description": "Svelte 5 wrapper for Convex Autumn billing - reactive, type-safe, SSR-ready",
	"license": "MIT",
	"keywords": [
		"svelte",
		"svelte5",
		"sveltekit",
		"convex",
		"autumn",
		"billing",
		"stripe",
		"payments",
		"subscription",
		"saas"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/stickerdaniel/convex-autumn-svelte.git"
	},	
	"homepage": "https://github.com/stickerdaniel/convex-autumn-svelte#readme",
	"bugs": {
		"url": "https://github.com/stickerdaniel/convex-autumn-svelte/issues"
	},
	"type": "module",
	"engines": {
		"node": ">=18.0.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist/svelte",
		"dist/sveltekit",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!dist/convex",
		"!dist/demo",
		"src/lib/svelte",
		"src/lib/sveltekit",
		"!src/lib/**/*.test.*",
		"!src/lib/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"scripts": {
		"dev:frontend": "vite dev",
		"dev:backend": "bunx convex dev",
		"dev": "concurrently --kill-others --prefix-colors blue,yellow --names 'svelte,convex' 'bun dev:frontend' 'bun dev:backend'",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"package": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --no-tsconfig --ignore \"src/lib/convex,dist\"",
		"check:watch": "svelte-kit sync && svelte-check --no-tsconfig --ignore \"src/lib/convex,dist\" --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"test:e2e": "playwright test",
		"test": "bun run test:e2e && bun run test:unit -- --run",
		"test:unit": "vitest"
	},
	"exports": {
		"./svelte": {
			"types": "./dist/svelte/index.svelte.d.ts",
			"svelte": "./dist/svelte/index.svelte.js",
			"default": "./dist/svelte/index.svelte.js"
		},
		"./sveltekit": {
			"types": "./dist/sveltekit/index.d.ts",
			"svelte": "./dist/sveltekit/index.js",
			"default": "./dist/sveltekit/index.js"
		},
		"./sveltekit/server": {
			"types": "./dist/sveltekit/server/index.d.ts",
			"import": "./dist/sveltekit/server/index.js"
		}
	},
	"devDependencies": {
		"@convex-dev/auth": "^0.0.90",
		"@mmailaender/convex-auth-svelte": "^0.1.2",
		"@playwright/test": "^1.55.0",
		"@skeletonlabs/skeleton": "^4.0.0",
		"@skeletonlabs/skeleton-svelte": "^1.5.1",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.36.3",
		"@sveltejs/package": "^2.5.0",
		"@sveltejs/vite-plugin-svelte": "^6.1.3",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.12",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/svelte": "^5.2.8",
		"@types/node": "^25.0.0",
		"concurrently": "^9.2.1",
		"convex": "^1.26.1",
		"convex-svelte": "^0.0.11",
		"dotenv": "^17.2.1",
		"jose": "^6.0.13",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"publint": "^0.3.12",
		"svelte": "^5.38.5",
		"svelte-check": "^4.3.1",
		"tailwindcss": "^4.1.12",
		"typescript": "^5.9.2",
		"vite": "^7.1.3",
		"vitest": "^3.2.4"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.21.0",
		"convex": "^1.24.3",
		"convex-svelte": "^0.0.11",
		"svelte": "^5.38.5"
	},
	"dependencies": {
		"@useautumn/convex": "^0.0.23",
		"atmn": "^0.0.27",
		"autumn-js": "^0.1.40",
		"cookie": "^1.0.2",
		"is-network-error": "^1.1.0",
		"jwt-decode": "^4.0.0",
		"path-to-regexp": "^8.2.0"
	}
}
